                app:layout_constraintStart_toStartOf="@+id/ivScoreFormitas"
                app:layout_constraintTop_toTopOf="@+id/ivScoreFormitas"
                app:layout_constraintVertical_bias="0.3" />

            <TextView
                android:id="@+id/tvIntScoreGameOverFormitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/silka_bold_webfont"
                android:text="100"
