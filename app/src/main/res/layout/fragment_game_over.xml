<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GameOverFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGameOverArcoiris"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/game_over_rosa"
        android:visibility="visible">

        <Button
            android:id="@+id/btnPlayAgainArcoiris"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/amarillo"
            android:fontFamily="@font/silka_bold_webfont"
            android:text="Jugar de nuevo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnExitArcoiris"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/btnExitArcoiris"
            app:layout_constraintTop_toBottomOf="@+id/clGameOverPuntajeArcoiris"
            app:layout_constraintVertical_bias="0.1" />

        <Button
            android:id="@+id/btnExitArcoiris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul"
            android:fontFamily="@font/silka_bold_webfont"
            android:paddingLeft="70dp"
            android:paddingTop="15dp"
            android:paddingRight="70dp"
            android:paddingBottom="15dp"
            android:text="Salir"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayAgainArcoiris"
            app:layout_constraintVertical_bias="0.1" />

        <ImageView
            android:id="@+id/ivGameOverArcoiris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnExitArcoiris"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_arcoiris_forma" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGameOverPuntajeArcoiris"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnPlayAgainArcoiris"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btnPlayAgainArcoiris"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012">

            <ImageView
                android:id="@+id/ivScoreArcoiris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic__score_azul" />

            <TextView
                android:id="@+id/tvScoreGameOverArcoiris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/silka_bold_webfont"
                android:text="Puntaje"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivScoreArcoiris"
                app:layout_constraintEnd_toEndOf="@+id/ivScoreArcoiris"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="@+id/ivScoreArcoiris"
                app:layout_constraintTop_toTopOf="@+id/ivScoreArcoiris"
                app:layout_constraintVertical_bias="0.3" />

            <TextView
                android:id="@+id/tvIntScoreGameOverArcoiris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/silka_bold_webfont"
                android:text="100"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="@+id/tvScoreGameOverArcoiris"
                app:layout_constraintStart_toStartOf="@+id/tvScoreGameOverArcoiris"
                app:layout_constraintTop_toBottomOf="@+id/tvScoreGameOverArcoiris" />

            <TextView
                android:id="@+id/tvNewHighscoreArcoiris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/silka_bold_webfont"
                android:text="Puntuación más alta"
                android:textAlignment="center"
                android:textColor="@color/r_amarillo"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/tvIntScoreGameOverArcoiris"
                app:layout_constraintStart_toStartOf="@+id/tvIntScoreGameOverArcoiris"
                app:layout_constraintTop_toBottomOf="@+id/tvIntScoreGameOverArcoiris" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

