                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="@+id/tvScoreGameOverFormitas"
                app:layout_constraintStart_toStartOf="@+id/tvScoreGameOverFormitas"
                app:layout_constraintTop_toBottomOf="@+id/tvScoreGameOverFormitas" />

            <TextView
                android:id="@+id/tvNewHighscoreFormitas"
